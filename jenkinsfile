pipeline {
    agent any

    stages {
        stage('Update GIT') {
            steps{   
     
                    withCredentials([usernamePassword(credentialsId: 'github', passwordVariable: 'GIT_PASSWORD', usernameVariable: 'GIT_USERNAME')]) {
                        //def encodedPassword = URLEncoder.encode("$GIT_PASSWORD",'UTF-8')
                        sh "git config user.email parasgoyal468@gmail.com"
                        sh "git config user.name ParasGoel1234"
                        //sh "git switch master"
                        sh "cat dev/deployment.yaml"
                        sh "sed -i 's+876724398547.dkr.ecr.ap-southeast-2.amazonaws.com/parasecr.*+876724398547.dkr.ecr.ap-southeast-2.amazonaws.com/parasecr:26+g' dev/deployment.yaml"
                        sh "cat dev/deployment.yaml"
                        sh "git add ."
                        sh "git commit -m 'Done by Jenkins Job changemanifest: ${env.BUILD_NUMBER}'"
                        sh "git push https://github.com/${GIT_USERNAME}/arogocd.git HEAD:main"
      }
    }
  
}

  }
}
